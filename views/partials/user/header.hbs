  <div class="bg-gray-900 text-white">
    <div class="container mx-auto px-4 py-2 flex items-center justify-between text-sm">
      <div class="flex items-center gap-3">
        <span class="bg-yellow-300 text-gray-900 px-2 py-1 rounded-sm text-xs font-semibold">Black</span>
        <span>Friday</span>
      </div>
      <div class="hidden sm:flex items-center gap-4">
        <span>Up to <span class="text-yellow-300 font-bold">59%</span> OFF</span>
        <button class="bg-yellow-400 text-black px-4 py-1 text-sm rounded shadow">SHOP NOW ➜</button>
      </div>
      <button aria-hidden="true" class="sm:hidden text-sm">Close ✕</button>
    </div>
  </div>

