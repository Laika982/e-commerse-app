  <!-- SCRIPTS: basic toggles for popups -->
  <script>
    // toggles
    const categoryBtn = document.getElementById('categoryBtn');
    const megaMenu = document.getElementById('megaMenu');
    const cartBtn = document.getElementById('cartBtn');
    const cartPopup = document.getElementById('cartPopup');
    const userBtn = document.getElementById('userBtn');
    const userPopup = document.getElementById('userPopup');
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const mobileMenu = document.getElementById('mobileMenu');
    const mobileClose = document.getElementById('mobileClose');

    function closeAll() {
      megaMenu.classList.add('hidden');
      cartPopup.classList.add('hidden');
      userPopup.classList.add('hidden');
      mobileMenu.classList.add('hidden');
    }

    categoryBtn?.addEventListener('click', (e) => {
      megaMenu.classList.toggle('hidden');
      cartPopup.classList.add('hidden');
      userPopup.classList.add('hidden');
    });

    cartBtn?.addEventListener('click', (e) => {
      cartPopup.classList.toggle('hidden');
      megaMenu.classList.add('hidden');
      userPopup.classList.add('hidden');
    });

    userBtn?.addEventListener('click', (e) => {
      userPopup.classList.toggle('hidden');
      cartPopup.classList.add('hidden');
      megaMenu.classList.add('hidden');
    });

    mobileMenuBtn?.addEventListener('click', () => {
      mobileMenu.classList.remove('hidden');
    });
    mobileClose?.addEventListener('click', () => mobileMenu.classList.add('hidden'));

    // Close on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeAll();
    });

    // Click outside to close (basic)
    document.addEventListener('click', (e) => {
      if (!categoryBtn?.contains(e.target) && !megaMenu?.contains(e.target)) {
        megaMenu?.classList.add('hidden');
      }
      if (!cartBtn?.contains(e.target) && !cartPopup?.contains(e.target)) {
        cartPopup?.classList.add('hidden');
      }
      if (!userBtn?.contains(e.target) && !userPopup?.contains(e.target)) {
        userPopup?.classList.add('hidden');
      }
    });
  </script>
