<script>
  const links = document.querySelectorAll(".sidebar-link");

  links.forEach(link => {
    link.addEventListener("pointerdown", function () {

      links.forEach(item => {
        item.classList.remove(
          "bg-blue-600",
          "text-white",
          "shadow"
        );
        item.classList.add("hover:bg-blue-100");
      });

      this.classList.add(
        "bg-blue-600",
        "text-white",
        "shadow"
      );
      this.classList.remove("hover:bg-blue-100");
    });
  });
</script>
